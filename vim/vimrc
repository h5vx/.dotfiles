function! AdjustFontSize(amount)
  let s:fontsize = s:fontsize+a:amount
  let &guifont = "Jetbrains\ Mono:h" . s:fontsize
endfunction
call AdjustFontSize(0)

nnoremap <C-+> :call AdjustFontSize(1)<CR>
nnoremap <C-_> :call AdjustFontSize(-1)<CR>
