function! s:init_fern() abort
  let b:vim_current_word_disabled_in_this_buffer = 1
  set nonumber
  nmap <buffer> D <Plug>(fern-action-remove)
endfunction

augroup my-fern
  autocmd! *
  autocmd FileType fern call s:init_fern()
augroup END

